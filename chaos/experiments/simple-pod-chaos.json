{
  "version": "1.0.0",
  "title": "Simple Pod Chaos - Terminate Frontend Pod",
  "description": "Terminates the frontend pod to test pod restart resilience",
  "tags": ["kubernetes", "pod", "resilience"],
  "steady-state-hypothesis": {
    "title": "Frontend pod is running",
    "probes": [
      {
        "type": "probe",
        "name": "frontend-pod-running",
        "tolerance": true,
        "provider": {
          "type": "python",
          "module": "chaosk8s.pod.probes",
          "func": "pods_in_phase",
          "arguments": {
            "label_selector": "app=frontend",
            "phase": "Running",
            "ns": "default"
          }
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "terminate-frontend-pod",
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.actions",
        "func": "terminate_pods",
        "arguments": {
          "label_selector": "app=frontend",
          "rand": true,
          "count": 1,
          "ns": "default"
        }
      },
      "pauses": {
        "after": 30
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "restart-frontend-deployment",
      "provider": {
        "type": "python",
        "module": "chaosk8s.deployment.actions",
        "func": "restart_deployment",
        "arguments": {
          "name": "frontend",
          "ns": "default"
        }
      }
    }
  ]
}
